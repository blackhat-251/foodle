                                        <div class="card-title">
                                            Title = <%= course.name %>
                                                </br>
                                                Description = <%= course.description %>
                                                    </br>
                                                    Code = <%= course.coursecode %>
                                                        </br>
                                                        <!-- <div class="progress" style="width: 60%;">
                                        <div class="progress-bar progress-bar-striped" role="progressbar" aria-valuenow="<%=course.completed%>" aria-valuemin="0" aria-valuemax="100" style="width: <%= course.completed%>%"><%=course.completed%>%</div>
                                    </div> -->
                                                        <a href="/instructor/assignments/<%= course.coursecode %>">View
                                                            all assignments</a>
                                                        </br>
                                                        <a href="/instructor/announcements/<%= course.coursecode %>">View
                                                            all announcements</a>
                                                        </br>
                                                        <a
                                                            href="/instructor/enrolled_students/<%= course.coursecode %>">All
                                                            enrolled students</a>
                                                        </br>
                                                        <a 
                                                            href="/forum/<%= course.coursecode %>">View forum</a>
                                                        </br>
                                                        <a 
                                                            href="/instructor/assignta/<%= course.coursecode %>">Manage TAs</a>
                                                        </br>
                                                        <a
                                                            href="/instructor/inviteall/<%= course.coursecode %>">Invite</a>
                                                        all students
                                                        for the course through mail
                                                        </br>

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <%}) %>
                                <% } else { %>
                                    <p>No Courses to show</p>
                                    <% } %>
                </div>


            </div>
            <%- include("./partials/foot.ejs") %>
        </body>