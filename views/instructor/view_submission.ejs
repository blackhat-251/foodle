        <script> 
document.getElementById("mean").innerHTML = `Mean: ${<%= dev(marks)[0] %>} `;
document.getElementById("var").innerHTML = `Variance: ${<%= dev(marks)[1] %>} `;


const plot=document.getElementById('test');
 
mark= <%- JSON.stringify(marks) %>
y=[0,0,0,0,0]
for(const m of mark){
    if(m<20){
        y[0]+=1;
    }
    else if(m<40){
        y[1]+=1;
    }
    else if(m<60){
        y[2]+=1;
    }
    else if(m<80){
        y[3]+=1;
    }
    else if(m<=100){
        y[4]+=1;
    }
}

var data = [
  {
    x: ['0-20', '20-40', '40-60', '60-80', '80-100'],
    y: y,
    type: 'bar',
    name: 'No of students'
  }
];
var layout = {
  title: {
    text:'',
    font: {
      family: 'Courier New, monospace',
      size: 24
    },
    xref: 'paper',
    x: 0.05,
  },
  xaxis: {
    title: {
      text: 'Marks',
      font: {
        family: 'Courier New, monospace',
        size: 18,
        color: '#7f7f7f'
      }
    },
  },
  yaxis: {
    title: {
      text: 'No of Students',
      font: {
        family: 'Courier New, monospace',
        size: 18,
        color: '#7f7f7f'
      }
    }
  }
};
Plotly.newPlot(plot, data, layout);
        </script>
