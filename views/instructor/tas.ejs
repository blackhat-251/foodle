<!DOCTYPE html>
<%- include("../partials/head.ejs") %>

    <%- include("../partials/home.ejs") %>

        <body style="padding-top: 4em; background-color:white;" class="ml-4">

            <h1> TAs for Course: <%= course.name%>
            </h1>
            <ul>
                <% if(tas_name.length>0) {%>
                    <ul>
                        <% for(var i=0;i<tas_name.length;i++){ %>
                            <li>
                                <%= tas_name[i].name %>
                                    <ul>
                                        <li>Announcements : <%= tas_priv[i].announcement %>
                                        </li>
                                        <li>Grading: <%= tas_priv[i].grading %>
                                        </li>
                                        <li>Assignment: <%= tas_priv[i].assignment %>
                                        </li>
                                    </ul>
                            </li>
                            <% } }else{%>
                                </br>
                                No TAs
                                <% }%>
                    </ul>
                    </br></br>
                    <h2>Enroll new TA</h2>
                    <form action="/instructor/assignta/<%= course.coursecode %>" method="post">
                        <div class="form-group">

                            <label for="username">Enroll Student with username for TAship : </label>
                            <input type="text" name="username" required>
                        </div>
                        <div class="form-group">

                            <label for="role">Allow announcements</label>
                            <input type="checkbox" name="announcement">
                        </div>
                        <div class="form-group">

                            <label for="role">Allow grading</label>
                            <input type="checkbox" name="grading">
                        </div>
                        <div class="form-group">

                            <label for="role">Allow assignment creation</label>
                            <input type="checkbox" name="assignment">
                        </div>

                        <input type="submit" value="Submit">
                    </form>
                    <%- include("../partials/foot.ejs") %>

        </body>