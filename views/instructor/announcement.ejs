<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>

<body>
    <h2>Announcements</h2>
    <% if(a) { %>
        <% a.reverse().forEach(function(assign) {%>
            <div class="card mb-3">
                <div class="card-header">
                    <div class="card-title">
                        Title = <%= assign.get('title') %>
                            </br>
                            Description = <%= assign.get('body') %>
                                </br>
                                Announcement Created At = <%= assign.get('date') %>
                                        <!-- </br>
                         ModifiedAt = <%= assign.updatedAt %> -->
                                        
                    </div>
                </div>
            </div>
            <%}) %>
                <% } else { %>
                    <p>No announcemmnet to show</p>
                    <% } %>

                        <a href="/instructor/create_announcement/<%= coursecode %>">Create Announcement</a>
</body>